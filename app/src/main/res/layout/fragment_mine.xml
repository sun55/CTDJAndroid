<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/mine_icon_11" />

    <ImageView
        android:id="@+id/iv_edit"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="54dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/mine_icon_01" />

    <com.ctdj.djandroid.view.CircleImageView
        android:id="@+id/iv_avatar"
        android:layout_width="84dp"
        android:layout_height="84dp"
        android:layout_below="@id/iv_edit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:src="@mipmap/ic_launcher"
        app:borderColor="#FACD89"
        app:borderWidth="1dp"
        app:radius="42dp" />

    <TextView
        android:id="@+id/tv_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_avatar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:drawableEnd="@drawable/female_small_icon"
        android:drawablePadding="6dp"
        android:lines="1"
        android:text="皮卡丘是只喵"
        android:textColor="#ffebebed"
        android:textSize="21sp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/ll_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_nickname"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:background="@drawable/left_radius_2_34353f"
            android:gravity="center"
            android:text="ID"
            android:textColor="#ffa2a2a7"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_id"
            android:layout_width="wrap_content"
            android:layout_height="21dp"
            android:background="@drawable/right_radius_2_22252f"
            android:gravity="center"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:text="100540"
            android:textColor="#ffebebed"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView

            android:id="@+id/tv_city"
            android:layout_width="wrap_content"
            android:layout_height="21dp"
            android:layout_marginStart="6dp"
            android:background="@drawable/radius_2_22252f"
            android:gravity="center"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:text="厦门市"
            android:textColor="#ffa2a2a7"
            android:textSize="12sp" />

        <TextView

            android:id="@+id/tv_constellation"
            android:layout_width="wrap_content"
            android:layout_height="21dp"
            android:layout_marginStart="6dp"
            android:background="@drawable/radius_2_22252f"
            android:gravity="center"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:text="星座"
            android:textColor="#ffa2a2a7"
            android:textSize="12sp" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/ll_menu_1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/ll_id"
        android:layout_marginStart="15dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/radius_10_22252f"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingStart="18dp"
        android:paddingEnd="18dp">

        <TextView
            android:id="@+id/tv_play_record"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/mine_icon_06"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="赛录"
            android:textColor="#ffebebed"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_task"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/mine_icon_05"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="任务"
            android:textColor="#ffebebed"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_income"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/mine_icon_04"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="奖金"
            android:textColor="#ffebebed"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_store"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/mine_icon_07"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="商城"
            android:textColor="#ffebebed"
            android:textSize="12sp" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/ll_menu_2"
        android:layout_width="match_parent"
        android:layout_height="109dp"
        android:layout_below="@id/ll_menu_1"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/radius_10_22252f"
        android:orientation="vertical"
        android:paddingStart="15dp"
        android:paddingEnd="15dp">

        <TextView
            android:id="@+id/tv_king_record"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:drawableStart="@drawable/mine_icon_10"
            android:drawableEnd="@drawable/right_more_icon"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:text="王者战绩"
            android:textColor="#ffebebed"
            android:textSize="13sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#34353F" />

        <TextView
            android:id="@+id/tv_bind_game"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:drawableStart="@drawable/mine_icon_02"
            android:drawableEnd="@drawable/right_more_icon"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:text="关联游戏账号"
            android:textColor="#ffebebed"
            android:textSize="13sp" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/ll_menu_3"
        android:layout_width="match_parent"
        android:layout_height="164dp"
        android:layout_below="@id/ll_menu_2"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/radius_10_22252f"
        android:orientation="vertical"
        android:paddingStart="15dp"
        android:paddingEnd="15dp">

        <TextView
            android:id="@+id/tv_feedback"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:drawableStart="@drawable/mine_icon_09"
            android:drawableEnd="@drawable/right_more_icon"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:text="意见反馈"
            android:textColor="#ffebebed"
            android:textSize="13sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#34353F" />

        <TextView
            android:id="@+id/tv_about"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:drawableStart="@drawable/mine_icon_03"
            android:drawableEnd="@drawable/right_more_icon"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:text="关于我们"
            android:textColor="#ffebebed"
            android:textSize="13sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#34353F" />

        <TextView
            android:id="@+id/tv_setting"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:drawableStart="@drawable/mine_icon_08"
            android:drawableEnd="@drawable/right_more_icon"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:text="设置"
            android:textColor="#ffebebed"
            android:textSize="13sp" />

    </androidx.appcompat.widget.LinearLayoutCompat>
</RelativeLayout>