<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/color_151522"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SmsCodeActivity">

    <com.ctdj.djandroid.view.TitleView
        android:id="@+id/title_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginStart="31dp"
        android:layout_marginTop="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="输入验证码"
        android:textColor="#ffebebed"
        android:textSize="21sp" />

    <TextView
        android:layout_marginTop="9dp"
        android:id="@+id/tv_phone_num"
        android:layout_marginStart="31dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已发送验证码至 159 5949 4999"
        android:textColor="#ffa2a2a7"
        android:textSize="14sp" />

    <com.ctdj.djandroid.view.PwdInputView
        android:id="@+id/sms_code"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="50dp"
        android:background="@null"
        android:inputType="number"
        android:textSize="21sp"
        android:textStyle="bold"
        app:pwv_borderColor="#22252F"
        app:pwv_borderStyle="face"
        app:pwv_strokeWidth="0dp"
        app:pwv_maxLength="4"
        app:pwv_pwdColor="#EBEBED"
        app:pwv_pwdStyle="plaintext"
        app:pwv_radius="10dp"
        app:pwv_spacing="10dp"/>

    <TextView
        android:onClick="reSendCode"
        android:id="@+id/tv_resend_code"
        android:layout_marginTop="20dp"
        android:layout_marginStart="31dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="重新获取验证码"
        android:textColor="#ffebebed"
        android:textSize="14sp" />

</LinearLayout>