<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="23dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="15dp"
        android:background="@drawable/radius_10_22252f"
        android:gravity="center"
        android:paddingStart="7dp"
        android:paddingEnd="7dp"
        android:text="00:00"
        android:textColor="#ffe8e8e9"
        android:textSize="13sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/radius_10_22252f">

        <com.ctdj.djandroid.view.CircleImageView
            android:id="@+id/circle_image"
            android:layout_width="match_parent"
            android:layout_height="162dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:scaleType="centerCrop"
            android:src="@drawable/default_head"
            android:visibility="gone"
            app:radius="10dp" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="57dp"
            android:layout_below="@id/circle_image"
            android:layout_marginStart="15dp"
            android:gravity="center"
            android:text="申诉审核结果提醒"
            android:textColor="#ffebebed"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="9dp"
            android:layout_height="9dp"
            android:layout_below="@id/circle_image"
            android:layout_marginStart="10dp"
            android:layout_marginTop="24dp"
            android:layout_toEndOf="@id/tv_title"
            android:background="@drawable/un_read_dot_bg"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="28dp"
            android:text="您的约战订单（订单编号：CT202108041225320001）申诉已有结果，请查收申诉结果"
            android:textColor="#80ebebed"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/tv_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:background="#34353F" />

        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_below="@id/tv_content"
            android:drawableEnd="@drawable/right_gray_more_icon"
            android:gravity="center_vertical"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:text="查看详情"
            android:textColor="#ffebebed"
            android:textSize="15sp" />
    </RelativeLayout>
</androidx.appcompat.widget.LinearLayoutCompat>