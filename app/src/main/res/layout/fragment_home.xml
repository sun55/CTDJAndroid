                        app:borderWidth="2dp"
                        app:radius="14dp" />

                    <com.ctdj.djandroid.view.CircleImageView
                        android:id="@+id/diamond_avatar_2"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_marginStart="-4dp"
                        android:layout_toEndOf="@id/diamond_avatar_1"
                        android:src="@drawable/default_head"
                        android:visibility="gone"
