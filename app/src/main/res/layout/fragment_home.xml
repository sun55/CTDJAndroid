<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/home_top_bg" />

            <TextView
                android:id="@+id/tv_label_1"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_below="@id/iv_top"
                android:layout_marginStart="16dp"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:text="匹配约战 赚取奖金"
                android:textColor="#ffebebed"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_alignTop="@id/tv_label_1"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/tv_label_1"
                android:gravity="center"
                android:text="每三个宝箱必出奖金"
                android:textColor="#ff5252fe"
                android:textSize="14sp" />

            <RelativeLayout
                android:id="@+id/rl_task"
                android:layout_width="match_parent"
                android:layout_height="226dp"
                android:layout_below="@id/tv_label_1"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/radius_10_22252f">

                <ImageView
                    android:layout_width="209dp"
                    android:layout_height="209dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/home_task_bg" />

                <TextView
                    android:layout_width="49dp"
                    android:layout_height="27dp"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/roll_label_bg"
                    android:gravity="center"
                    android:text="规则"
                    android:textColor="#ffebebed"
                    android:textSize="11sp" />

                <Button
                    android:id="@+id/btn_play_now"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="15dp"
                    android:background="@drawable/btn_enable_bg"
                    android:text="立即匹配约战"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_label_2"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_below="@id/rl_task"
                android:layout_marginStart="16dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="王者对战 实力获奖"
                android:textColor="#ffebebed"
                android:textSize="16sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:id="@+id/rl_1"
                android:layout_width="match_parent"
                android:layout_height="153dp"
                android:layout_below="@id/tv_label_2"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp">

                <ImageView
                    android:id="@+id/iv_left_1"
                    android:layout_width="104dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/home_item_bg" />

                <ImageView
                    android:id="@+id/iv_right_1"
                    android:layout_width="239dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/gold_game_bg" />

                <TextView
                    android:id="@+id/tv_gold_label"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/gradient_color_ff793a_fea525_radius_12"
                    android:drawableStart="@drawable/wave_icon"
                    android:drawablePadding="4dp"
                    android:gravity="center"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:text="金币挑战"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_gold_label"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:text="滴金币 得金币"
                    android:textColor="#ffe8e8e9"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <com.ctdj.djandroid.view.CircleImageView
                    android:id="@+id/iv_avatar_4"
                    android:layout_width="31dp"
                    android:layout_height="31dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="-3dp"
                    android:layout_marginBottom="14dp"
                    android:layout_toEndOf="@id/iv_avatar_3"
                    android:src="@mipmap/ic_launcher"
                    app:borderColor="#161824"
                    app:borderWidth="2dp"
                    app:radius="15.5dp" />

                <com.ctdj.djandroid.view.CircleImageView
                    android:id="@+id/iv_avatar_3"
                    android:layout_width="31dp"
                    android:layout_height="31dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="-3dp"
                    android:layout_marginBottom="14dp"
                    android:layout_toEndOf="@id/iv_avatar_2"
                    android:src="@mipmap/ic_launcher"
                    app:borderColor="#161824"
                    app:borderWidth="2dp"
                    app:radius="15.5dp" />

                <com.ctdj.djandroid.view.CircleImageView
                    android:id="@+id/iv_avatar_2"
                    android:layout_width="31dp"
                    android:layout_height="31dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="-3dp"
                    android:layout_marginBottom="14dp"
                    android:layout_toEndOf="@id/iv_avatar_1"
                    android:src="@mipmap/ic_launcher"
                    app:borderColor="#161824"
                    app:borderWidth="2dp"
                    app:radius="15.5dp" />

                <com.ctdj.djandroid.view.CircleImageView
                    android:id="@+id/iv_avatar_1"
                    android:layout_width="31dp"
                    android:layout_height="31dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="14dp"
                    android:layout_marginBottom="14dp"
                    android:src="@mipmap/ic_launcher"
                    app:borderColor="#161824"
                    app:borderWidth="2dp"
                    app:radius="15.5dp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_2"
                android:layout_width="match_parent"
                android:layout_height="153dp"
                android:layout_below="@id/rl_1"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp">

                <ImageView
                    android:id="@+id/iv_left_2"
                    android:layout_width="104dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/home_item_bg" />

                <ImageView
                    android:id="@+id/iv_right_2"
                    android:layout_width="239dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/ticket_game_bg" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/gradient_color_52397f_bb38fd_radius_12"
                    android:drawableStart="@drawable/wave_icon"
                    android:drawablePadding="4dp"
                    android:gravity="center"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:text="门票挑战"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <com.ctdj.djandroid.view.CircleImageView
                    android:id="@+id/iv_avatar_8"
                    android:layout_width="31dp"
                    android:layout_height="31dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="-3dp"
                    android:layout_marginBottom="14dp"
                    android:layout_toEndOf="@id/iv_avatar_7"
                    android:src="@mipmap/ic_launcher"
                    app:borderColor="#161824"
                    app:borderWidth="2dp"
                    app:radius="15.5dp" />

                <com.ctdj.djandroid.view.CircleImageView
                    android:id="@+id/iv_avatar_7"
                    android:layout_width="31dp"
                    android:layout_height="31dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="-3dp"
                    android:layout_marginBottom="14dp"
                    android:layout_toEndOf="@id/iv_avatar_6"
                    android:src="@mipmap/ic_launcher"
                    app:borderColor="#161824"
                    app:borderWidth="2dp"
                    app:radius="15.5dp" />

                <com.ctdj.djandroid.view.CircleImageView
                    android:id="@+id/iv_avatar_6"
                    android:layout_width="31dp"
                    android:layout_height="31dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="-3dp"
                    android:layout_marginBottom="14dp"
                    android:layout_toEndOf="@id/iv_avatar_5"
                    android:src="@mipmap/ic_launcher"
                    app:borderColor="#161824"
                    app:borderWidth="2dp"
                    app:radius="15.5dp" />

                <com.ctdj.djandroid.view.CircleImageView
                    android:id="@+id/iv_avatar_5"
                    android:layout_width="31dp"
                    android:layout_height="31dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="14dp"
                    android:layout_marginBottom="14dp"
                    android:src="@mipmap/ic_launcher"
                    app:borderColor="#161824"
                    app:borderWidth="2dp"
                    app:radius="15.5dp" />
            </RelativeLayout>
        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

    <TextView
        android:id="@+id/tv_gold_count"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/radius_15_8022252f"
        android:drawableStart="@drawable/gold_icon"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:paddingStart="7dp"
        android:paddingEnd="7dp"
        android:text="850+"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold" />

</RelativeLayout>