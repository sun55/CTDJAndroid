                android:layout_width="match_parent"
                android:layout_height="132dp"
                app:banner_auto_loop="true"
                app:banner_indicator_marginBottom="5dp"
                app:banner_indicator_normal_color="#80FFFFFF"
                app:banner_indicator_normal_width="5dp"
                app:banner_indicator_selected_color="@color/white"
                app:banner_indicator_selected_width="5dp"
                app:banner_indicator_space="5dp"
                app:banner_loop_time="3000"
                app:banner_radius="15dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/radius_14_22252f">

                <ImageView
                    android:id="@+id/iv_red_package"
                    android:layout_width="81dp"
                    android:layout_height="64dp"
                    android:background="@drawable/radius_left_15_1a1c29"
                    android:scaleType="center"
                    android:src="@drawable/home_icon_2" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_toEndOf="@id/iv_red_package"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/iv_package_icon_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="12dp"
                            android:background="@drawable/home_icon_3" />

                        <TextView
                            android:id="@+id/tv_package_value_1"
                            android:layout_width="wrap_content"
                            android:layout_height="13dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="27dp"
                            android:background="@drawable/home_icon_5"
                            android:drawableStart="@drawable/home_icon_4"
                            android:drawablePadding="2dp"
                            android:gravity="center_vertical"
                            android:paddingStart="2.5dp"
                            android:text="0.15"
                            android:textColor="#ff861e01"
                            android:textSize="7sp" />

                        <TextView
                            android:id="@+id/tv_package_index_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="10dp"
                            android:text="NO.1"
                            android:textColor="#80ebebed"
                            android:textSize="9sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/iv_package_icon_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="12dp"
                            android:background="@drawable/home_icon_6" />

                        <TextView
                            android:id="@+id/tv_package_value_2"
                            android:layout_width="wrap_content"
                            android:layout_height="13dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="27dp"
                            android:background="@drawable/home_icon_5"
                            android:drawableStart="@drawable/home_icon_4"
                            android:drawablePadding="2dp"
                            android:gravity="center_vertical"
                            android:paddingStart="2.5dp"
                            android:text="0.15"
                            android:textColor="#ff861e01"
                            android:textSize="7sp"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/tv_package_index_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="10dp"
                            android:text="NO.2"
                            android:textColor="#ebebed"
                            android:textSize="9sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/iv_package_icon_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="12dp"
                            android:background="@drawable/home_icon_7" />

                        <TextView
                            android:id="@+id/tv_package_value_3"
                            android:layout_width="wrap_content"
                            android:layout_height="13dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="27dp"
                            android:background="@drawable/home_icon_5"
                            android:drawableStart="@drawable/home_icon_4"
                            android:drawablePadding="2dp"
                            android:gravity="center_vertical"
                            android:paddingStart="2.5dp"
                            android:text="0.15"
                            android:textColor="#ff861e01"
                            android:textSize="7sp"
                            android:visibility="gone" />

