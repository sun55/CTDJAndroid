<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="79dp"
        android:padding="15dp">

        <com.ctdj.djandroid.view.CircleImageView
            android:id="@+id/iv_avatar"
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:src="@drawable/default_head"
            app:radius="24.5dp" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/iv_avatar"
            android:orientation="vertical">

            <TextView
                android:id="@+id/iv_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/female_small_icon"
                android:drawablePadding="5dp"
                android:lines="1"
                android:maxLength="16"
                android:text="昵称"
                android:textColor="#ebebed"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_play_status"
                android:layout_width="36dp"
                android:layout_height="13dp"
                android:layout_marginTop="5dp"
                android:text="约战中"
                android:textColor="#ffebebed"
                android:textSize="14sp" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <TextView
            android:id="@+id/tv_follow"
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/login_btn_bg"
            android:gravity="center"
            android:minWidth="49dp"
            android:paddingStart="9dp"
            android:paddingEnd="9dp"
            android:text="关注"
            android:textColor="#ffebebed"
            android:textSize="12sp" />
    </RelativeLayout>
</RelativeLayout>